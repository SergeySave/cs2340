<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout android:id="@+id/myCoordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageUpload"
            android:layout_width="310dp"
            android:layout_height="209dp"
            android:layout_alignTop="@+id/uploadButton"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/upload_image" />

        <TextView
            android:id="@+id/shortdes"
            android:layout_width="269dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/donationShortDes"
            android:layout_below="@+id/imageUpload"
            android:fontFamily="@font/montserrat"
            android:text="@string/itemname"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/donationShortDes"
            android:layout_width="359dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="271dp"
            android:background="@drawable/blankbar"
            android:fontFamily="@font/montserrat"
            android:hint="@string/donation_ShortDes"
            android:textColorHint="@color/hintColor"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/longdes"
            android:layout_width="269dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/donationShortDes"
            android:layout_below="@+id/donationShortDes"
            android:fontFamily="@font/montserrat"
            android:text="@string/longdes"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/donationLongDes"
            android:layout_width="359dp"
            android:layout_height="50dp"
            android:layout_below="@+id/longdes"
            android:layout_centerHorizontal="true"
            android:background="@drawable/blankbar"
            android:textColorHint="@color/hintColor"
            android:fontFamily="@font/montserrat"
            android:hint="@string/donation_LongDes"
            android:inputType=""
            android:textSize="24sp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="269dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/donationShortDes"
            android:layout_below="@+id/donationLongDes"
            android:fontFamily="@font/montserrat"
            android:text="@string/price"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/donationPrice"
            android:layout_width="359dp"
            android:layout_height="50dp"
            android:layout_below="@+id/price"
            android:layout_centerHorizontal="true"
            android:background="@drawable/blankbar"
            android:fontFamily="@font/montserrat"
            android:ems="10"
            android:hint="@string/donation_price"
            android:inputType="numberDecimal"
            android:textColorHint="@color/hintColor"
            android:textSize="24sp"/>


        <TextView
            android:id="@+id/comment"
            android:layout_width="269dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/donationShortDes"
            android:layout_below="@+id/donationPrice"
            android:fontFamily="@font/montserrat"
            android:text="@string/donation_comment"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/donationComments"
            android:layout_width="359dp"
            android:layout_height="50dp"
            android:layout_below="@+id/comment"
            android:layout_centerHorizontal="true"
            android:background="@drawable/blankbar"
            android:fontFamily="@font/montserrat"
            android:textColorHint="@color/hintColor"
            android:hint="@string/donation_comment"
            android:inputType=""
            android:textSize="24sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="269dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/imageUpload"
            android:layout_below="@+id/donationCategory"
            android:fontFamily="@font/montserrat"
            android:text="@string/price"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:visibility="visible" />


        <EditText
            android:id="@+id/donationDate"
            android:layout_width="359dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="206dp"
            android:background="@drawable/blankbar"
            android:ems="10"
            android:inputType="date"
            android:textColorHint="@color/hintColor" />

        <EditText
            android:id="@+id/donationTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/hintColor"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="246dp"
            android:background="@drawable/blankbar"
            android:ems="10"
            android:inputType="time" />

        <Spinner
            android:id="@+id/donationCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="135dp"
            android:background="@drawable/dropdown" />

        <Button
            android:id="@+id/uploadButton"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:background="@drawable/addpic" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="222dp"
            android:layout_marginEnd="29dp"
            android:background="@drawable/savebutton"
            android:text="@string/save" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>