<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout android:id="@+id/myCoordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageUpload"
            android:layout_width="302dp"
            android:layout_height="205dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/upload_image" />
        <TextView
            android:id="@+id/shortdes"
            android:layout_width="269dp"
            android:layout_height="40dp"
            android:layout_above="@+id/donationShortDes"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/montserrat"
            android:text="@string/password"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:visibility="visible"
             />

        <EditText
            android:id="@+id/donationShortDes"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageUpload"
            android:background="@drawable/blankbar"
            android:fontFamily="@font/montserrat"
            android:hint="@string/donation_ShortDes"
            android:textColorHint=""
            android:inputType=""
            android:textSize="24sp" />

        <TextView
            android:id="@+id/longdes"
            android:layout_width="269dp"
            android:layout_height="40dp"
            android:layout_above="@+id/donationLongDes"
            android:fontFamily="@font/montserrat"
            android:text="@string/password"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:visibility="visible" />
        <EditText
            android:id="@+id/donationLongDes"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/blankbar"
            android:fontFamily="sans-serif"
            android:hint="@string/donation_LongDes"
            android:inputType=""
            android:textSize="24sp" />

        <EditText
            android:id="@+id/donationComments"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="302dp"
            android:background="@drawable/blankbar"
            android:fontFamily="sans-serif"
            android:hint="@string/donation_comment"
            android:inputType=""
            android:textSize="24sp" />

        <EditText
            android:id="@+id/donationPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="337dp"
            android:background="@drawable/blankbar"
            android:ems="10"
            android:hint="@string/donation_price"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/donationDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="272dp"
            android:background="@drawable/blankbar"
            android:ems="10"
            android:inputType="date" />

        <EditText
            android:id="@+id/donationTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="246dp"
            android:background="@drawable/blankbar"
            android:ems="10"
            android:inputType="time" />

        <Spinner
            android:id="@+id/donationCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="174dp"
            android:background="@drawable/dropdown" />

        <Button
            android:id="@+id/uploadButton"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:text="@string/upload_button" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="222dp"
            android:layout_marginEnd="29dp"
            android:background="@drawable/savebutton"
            android:text="@string/save" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>